$stdin=open 'day5.txt'
input = $<.map { |l|
  l =~ /(\d+),(\d+) -> (\d+),(\d+)/
  [$1.to_i+$2.to_i.i, $3.to_i+$4.to_i.i]
}


map = Hash.new 0
input.each do |(tl,br)|
  # p [tl, br]
  # next unless tl.imag == 4
  if tl.imag == br.imag
    Range.new(*[tl.real, br.real].minmax).each do |i|
      map[tl.imag.i + i] += 1
    end
  elsif tl.real == br.real
    Range.new(*[tl.imag, br.imag].minmax).each do |i|
      map[tl.real + i.i] += 1
    end
  end
end

=begin
.......1..
..1....1..
..1....1..
.......1..
.112111211
..........
..........
..........
..........
222111....
=end
p map
p input
p map.select { |_,b| b >= 2 }.length
exit
__END__
0,9 -> 5,9
8,0 -> 0,8
9,4 -> 3,4
2,2 -> 2,1
7,0 -> 7,4
6,4 -> 2,0
0,9 -> 2,9
3,4 -> 1,4
0,0 -> 8,8
5,5 -> 8,2
